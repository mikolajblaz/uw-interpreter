-- Funkcje i pattern matching

-- main :: Int;
main = id a == 4 && pid 60 7 == 7 && const 60 7 == 60 && b == 6 && c == 21 &&
       d == 38 && e == 7 && f == 8 && lst == 12 && eight 10 == 8;

-- a :: Int;
-- b :: Int;
-- z :: Int;
-- d :: Int;
-- e :: Int;

a = 4;
id = \x :: Int. x end;
pid = \x :: Int, y :: Int. y end;
const = \x :: Int, y :: Int. x end;

b = case 4 of {
  k -> k + 2;
};

c = case (3, 7) of {
  (s, t) -> s * t;
};

d = case (38, 7) of {
  r -> fst r;
};

fst = \x :: Int. case x of {(x, y) -> x} end;
snd = \x :: Int. case x of {(x, y) -> y} end;

e = case (45, 54) of {
  [45, 54] -> 6;
  (45, 54) -> 7
};

lst = case [3, 4, 5] of {[x, y, z] -> x + y + z};

f = case (45, 54) of {
  (x, x) -> 7; -- TODO: throw error, not pattern mismatch
  (1, 1) -> 8
};

undef = case 7 of {
  (4, 6) -> 5;
};

eight = const 8;
