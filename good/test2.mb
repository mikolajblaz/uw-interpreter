-- Funkcje i pattern matching

main :: Bool;
main = id a == 4 && pid 60 7 == 7 && const 60 7 == 60 && b == 6 && c == 21 &&
       d == 38 && e == 6 && f == 7 && lst == 12 && eight 10 == 8 && rec 7 == 2;

a :: Int;
b :: Int;
c :: Int;
d :: Int;
e :: Int;
f :: Int;
z :: Int;

a = 4;
id :: Int -> Int;
id = \x :: Int. x end;
pid :: Int -> Int -> Int;
pid = \x :: Int, y :: Int. y end;
const :: Int -> Int -> Int;
const = \x :: Int, y :: Int. x end;

b = case 4 of {
  k -> k + 2;
};

c = case (3, 7) of {
  (s, t) -> s * t;
};

d = case (38, 7) of {
  r -> fst r;
};

fst :: (Int, Int) -> Int;
fst = \x :: (Int, Int). case x of {(x, y) -> x} end;
snd :: (Int, Int) -> Int;
snd = \x :: (Int, Int). case x of {(x, y) -> y} end;

e = case (45, 54) of {
  (45, 55) -> 6;
  (45, 54) -> 7
};

lst :: Int;
lst = case [3, 4, 5] of {[x, y, z] -> x + y + z};

f = case (45, 54) of {
  (x, y) -> 7;
  (1, 1) -> 8
};

undef :: Int;
undef = case 7 of {
  4 -> 5;
};

eight :: Int -> Int;
eight = const 8;

rec :: Int -> Int;
rec = \x :: Int. if x == 2 then x else 2 end end;

r :: Int -> Int;
r = \x :: Int. 4 end;
